python
class StructuralFeature:
    def __init__(self, name, dimensions):
        self.name = name
        self.dimensions = dimensions

    def calculate_area(self):
        if self.name == "rectangle":
            return self.dimensions['width'] * self.dimensions['height']
        elif self.name == "triangle":
            return 0.5 * self.dimensions['base'] * self.dimensions['height']
        elif self.name == "circle":
            import math
            return math.pi * (self.dimensions['radius'] ** 2)
        else:
            raise ValueError("Unsupported shape: {}".format(self.name))

    def __str__(self):
        return "StructuralFeature: {}, Dimensions: {}".format(self.name, self.dimensions)

    def __repr__(self):
        return self.__str__()