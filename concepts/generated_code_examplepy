python
class Feature:
    def __init__(self, name, description):
        self.name = name
        self.description = description

    def activate(self):
        return f"{self.name} feature activated."

    def deactivate(self):
        return f"{self.name} feature deactivated."

    def status(self):
        return f"Feature: {self.name}, Description: {self.description}"